{
	"compilerOptions": {
		"target": "es5",
		"outDir": "./JavaScript",
		"outFile": "./JavaScript_Bundle.js",
		"module": "amd",
		"rootDir": "../",
		"sourceMap": true,
		
		"moduleResolution": "node",
		"watch": true,
		"experimentalDecorators": true,
		"baseUrl": "../",
		"noImplicitUseStrict": true // maybe temp; for eval-based module extract stuff
	},
	"include": [
        "../Source/**/*.ts",
        "../Tests/**/*.ts"
    ],
	"compileOnSave": true
}